<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
    <div style="margin: 25px;">
        <div style="display:flex; justify-content: space-between; align-self: center;">
            <h1>List User:
            </h1>
            <div>
                <a class="btn btn-warning" href="/create-user">Create a new user</a>
            </div>
        </div>
        <hr>
        <table class="table table-hover table-striped table-boreded">
            <thead>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Action</th>
            </thead>
            <tbody>
                <% users.forEach( function (users) { %>
                    <tr>
                        <td>
                            <%= users.id %>
                        </td>
                        <td>
                            <%= users.name %>
                        </td>
                        <td>
                            <%= users.email %>
                        </td>
                        <td>
                            <%= users.address %>
                        </td>
                        <td>
                            <div style="display: flex; gap: 10px;">
                                <form action="/handle-update-user/<%= users.id %>" method="get">
                                    <button type="submit" class="btn btn-warning">Update</button>
                                </form>
                                <form action="/handle-delete-user/<%= users.id %>" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</body>

</html>